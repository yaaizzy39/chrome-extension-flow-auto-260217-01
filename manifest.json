{
  "manifest_version": 3,
  "name": "Flow Auto Clicker",
  "version": "1.0",
  "description": "Google Labs Flowを開き、「新しいプロジェクト」ボタンを自動的にクリックします。",
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://labs.google/*",
    "https://accounts.google.com/*"
  ],
  "action": {
    "default_title": "Flowを開く",
    "default_icon": "icon-flow-260216-01.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icon-flow-260216-01.png",
    "48": "icon-flow-260216-01.png",
    "128": "icon-flow-260216-01.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://labs.google/fx/ja/tools/flow*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://accounts.google.com/*"
      ],
      "js": [
        "login.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "caracter_images/*.png",
        "caracter_images/*.jpg",
        "caracter_images/*.webp"
      ],
      "matches": [
        "https://labs.google/*"
      ]
    }
  ]
}